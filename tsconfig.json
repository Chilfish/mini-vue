{
  "compilerOptions": {
    "target": "es2016",
    "lib": ["esnext", "DOM"],
    "baseUrl": ".",
    "rootDir": ".",
    "module": "esnext",
    "moduleResolution": "node",
    "paths": {
      "@mini-vue/*": ["packages/*/src"]
    },
    "types": ["vitest/globals"],
    "strict": true,
    "noImplicitAny": false,
    "downlevelIteration": true,
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "esModuleInterop": true
  },
  "include": ["packages/*/src", "packages/*/__tests__"]
}
